.t-scroll-header{
  height: 400rpx;
  display: flex;
  white-space: nowrap;
  margin-bottom:20rpx;
}
.swiper_hot{
  height: 400rpx;
}
.t-rel-list{
  z-index: 5;
  opacity: 0.7;
  top: 30rpx;
  width:100%;
  height:320rpx;
  padding: 20rpx;
  box-sizing: border-box;
  
  display: inline-block;
  position: relative;
  
  border-radius: 20rpx;
  overflow: hidden;
}
.active {
  opacity: 1;
  z-index: 10;
  height: 340rpx;
  width: 100%;
  top: 20rpx;
  transition: all 0.2s ease-in 0s;
}
.t-rel-list image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.t-text{
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  height: 120rpx;
  /* line-height: 100rpx; */
  color: #fff;
  padding:0 30rpx;
  box-sizing: border-box;
  background: -webkit-linear-gradient(top, rgba(0,0,0,0) 0%, rgba(0,0,0,0.5) 100%);
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  padding-top: 30rpx;
}
.cbody{
  font-size: 24rpx;
